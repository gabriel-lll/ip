<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nerpbot.gui.HelpWindow">
    <children>
        <Label alignment="CENTER" layoutX="25.0" layoutY="14.0" text="NerpBot Help Guide" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="14.0">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <ScrollPane fitToWidth="true" layoutX="25.0" layoutY="50.0" prefHeight="400.0" prefWidth="300.0"
                    AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0"
                    AnchorPane.topAnchor="50.0">
            <content>
                <VBox fx:id="helpContent" prefWidth="300.0" spacing="10.0" style="-fx-padding: 10;">
                    <!-- Content will be populated programmatically -->
                </VBox>
            </content>
        </ScrollPane>
        <Button fx:id="closeButton" layoutX="151.0" layoutY="461.0" mnemonicParsing="false" onAction="#closeHelp"
                text="Close" AnchorPane.bottomAnchor="14.0"/>
    </children>
</AnchorPane>
